@model Usuario

<div class = "split left">
  <br /> <br /> <h1 style = "text-align: center; color: #005393"> <b> Ingresar </b> </h1> 
  <div class="centered">
      <form method="post" asp-controller="Home" asp-action="Login">
          <h5> Nombre de usuario: </h5>
          <input asp-for="NombreUsuario" /> <br /> <br />
          <h5> Contraseña: </h5>
          <input type="password" asp-for="ClaveUsuario" /> <br /> <br />
          <br />
          <button style="background-color: #00a1ff" class="btn btn-lg" type="submit">
              Ingresar
          </button>
          @{ if (ViewData["Error"] != null)
                          {
              <div style="margin: 20px" class="alert alert-danger">
                  Usuario Inválido
              </div> } }
      </form>
  </div>
</div>

<div class="split right">
  <br /> <br /> <h1 style = "text-align: center; color: #ffda33"> <b> Nuevo usuario </b> </h1>    
  <br />
  <div class="centered">
    <table class = "center" style = "width: 560px; font-size: 20px">
        <tr style = "color: white">
            <td> 
                <form method="post" asp-controller="Home" asp-action="Create">
                    <h5> Nombre de usuario: </h5>
                    <input asp-for="NombreUsuario" /> <br /> <br />
                    <h5> Continente de origen </h5>
                    @*<input asp-for="ContinenteUsuario" /> <br /> <br />*@
                    <select asp-for="ContinenteUsuario" style="margin-bottom: 15px">
                        <optgroup label="Continentes">
                            <option value="Norteamérica">Norteamérica</option>
                            <option value="Centroamérica">Centroamérica</option>
                            <option value="Sudamérica">Sudamérica</option>
                            <option value="África">África</option>
                            <option value="Oceanía">Oceanía</option>
                            <option value="Asia">Asia</option>
                            <option value="Antártida">Antártida</option>
                        </optgroup>
                    </select>
                    <h5> Contraseña: </h5>
                    <input type="password" asp-for="ClaveUsuario" /> <br /> <br />
                    <button style="background-color: #00a1ff" class="btn btn-lg" type="submit">
                        Crear
                    </button>
                    @{ if (ViewData["ErrorCreacion"] != null)
                        {
                <div style="margin: 20px" class="alert alert-danger">
                    @ViewData["ErrorCreacion"]
                </div> } }
                </form>
            </td>
        </tr>
    </table>
  </div>
</div>