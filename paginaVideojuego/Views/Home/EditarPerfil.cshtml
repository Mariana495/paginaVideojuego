@model Usuario

<div class="split left">
    <div class="centered">
        <img src="https://alumnes.org/wp-content/uploads/2017/06/fa-user-circle-o-c0a2bd7a.png" alt="User icon">
        <h2 style="color: #0276ba"> @Model.NombreUsuario </h2>
    </div>
</div>

<div class="split right">
  <br /> <h1 style = "text-align: center; color: #ffda33"> <b> Editar usuario </b> </h1>    
  <br />
  <div class="centered">
    <table class = "center" style = "width: 560px; font-size: 20px">
        <tr style = "color: white">
            <td> 
                <form method="post" asp-action="EditarPerfil">
                    <h5> Nombre de usuario: </h5>
                    <input type="text" asp-for="NombreUsuario" name="NombreUsuario" /> <br /> <br />

                    <h5> Continente de origen </h5>
                    <select asp-for="ContinenteUsuario" style="margin-bottom: 15px">
                        <optgroup label="Continentes">
                            <option value="Norteamérica">Norteamérica</option>
                            <option value="Centroamérica">Centroamérica</option>
                            <option value="Sudamérica">Sudamérica</option>
                            <option value="África">África</option>
                            <option value="Oceanía">Oceanía</option>
                            <option value="Asia">Asia</option>
                            <option value="Antártida">Antártida</option>
                        </optgroup>
                    </select>

                    <h5> Nueva contraseña: </h5>
                    <input type="password" id="newPassword" /> <br /> <br />

                    <h5> Confirmar nueva contraseña: </h5>
                    <input name="ClaveUsuario" type="password" id="newPassword2" onKeyUp="enableButton()" /> <br /> <br />

                    <input type="hidden" name="IdUsuario" value="@Model.IdUsuario" /><br />

                    <input style="background-color: #00a1ff" class="btn btn-lg" id="button" type="submit" value="Guardar" /><br />
                    @{
                        if (ViewData["ErrorEdicion"] != null)
                        {
                            <div style="margin: 20px" class="alert alert-danger">
                                @ViewData["ErrorEdicion"]
                            </div>
                        }
                    }
                </form>
                

            </td>
        </tr>
    </table>
    
  </div>
</div>

<script type="text/javascript">

    function enableButton()

    {

        var camp1 = document.getElementById('newPassword');
        var camp2 = document.getElementById('newPassword2');
        var boton = document.getElementById('button');

        if (camp1.value != camp2.value) {

            boton.disabled = true;
        }else {
            boton.disabled = false;
        }
    }



</script>